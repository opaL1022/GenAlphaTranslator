{
    "manifest_version": 3,
    "name": "TypeScript Chrome Extension",
    "version": "1.0.0",
    "description": "A Chrome extension built with TypeScript.",
    "permissions": ["storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  